<mvc:View controllerName="com.myorg.myUI5App.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <SplitApp id="SplitApp" initialDetail="detail"
    initialMaster="master" >
    <detailPages>
        <Page id="detail" title="결과" backgroundDesign="Solid">
            <headerContent>
                <Button text="검색" press="onSearch"></Button>                
            </headerContent>
        </Page>
        <Page id="detailDetail" title="상세 정보" backgroundDesign="Solid">
            <headerContent>                
                <Button text="수정" press="onChange"></Button>
                <Button text="생성" press="onCreate"></Button>
            </headerContent>
        </Page>
    </detailPages>

    <masterPages>
        <Page id="master" title="검색 조건">
        </Page>
    </masterPages>
</SplitApp>
</mvc:View>
